version: '3'

services:
    php:
        build:
            context: .docker/php7-fpm
            args:
                TIMEZONE: ${TIMEZONE}
        volumes:
            - ./:/var/www/symfony
            - ./logs/symfony:/var/www/symfony/app/logs
    nginx:
        build: .docker/nginx
        ports:
            - ${NGINX_PORT}:80
        volumes:
            - ./logs/nginx/:/var/log/nginx

